{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./"
    },
    "include": ["**/*.ts", "**/*.json"],
    "exclude": ["node_modules"]
}
